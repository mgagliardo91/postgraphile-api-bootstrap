{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src", "__tests__", "jest.config.ts", "codegen.ts"],
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "paths": {
      "~src/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "lib": ["es2022"],
    "outDir": "dist",
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "preserveSymlinks": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    // Strict options
    // See more recommendations at https://github.com/tsconfig/bases/blob/main/bases/strictest.json
    "strict": true,
    "alwaysStrict": true,
    "strictPropertyInitialization": false
  }
}
