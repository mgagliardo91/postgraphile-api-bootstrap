{
  "name": "nio-internal-api",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "docker:up": "docker compose up -d --wait",
    "docker:down": "docker compose down --remove-orphans",
    "prestart": "npm run docker:up",
    "start": "DEBUG='graphile-build:warn' nodemon -w src/ src/index.ts",
    "db:reset": "graphile-migrate reset --erase",
    "db:seed": "graphile-migrate run src/db/migrations/hooks/seed.sql",
    "build": "npm run build:ts",
    "build:ts": "rimraf dist/ && tsc -p tsconfig.prod.json && copyfiles -u 1 'src/**/*.{graphql,sql,yaml}' dist/",
    "lint": "eslint --cache --fix --ignore-path=.gitignore --format=visualstudio .",
    "test": "npm run test:unit && npm run test:int",
    "test:unit": "TEST_TYPE=unit jest",
    "test:int": "TEST_TYPE=integration jest"
  },
  "dependencies": {
    "@authzed/authzed-node": "^0.10.0",
    "@graphile-contrib/pg-many-to-many": "^1.0.2",
    "@graphile-contrib/pg-simplify-inflector": "^6.1.0",
    "@graphile/logger": "^0.2.0",
    "@graphile/pg-aggregates": "^0.1.1",
    "@graphql-tools/load-files": "^6.6.1",
    "@graphql-tools/merge": "^8.3.18",
    "@ndustrial/node-distributed-lock": "^0.14.5",
    "@types/uuid": "^9.0.1",
    "apollo-graphql": "^0.9.6",
    "apollo-server-core": "^3.12.0",
    "apollo-server-plugin-base": "^3.7.2",
    "async-exit-hook": "^2.0.1",
    "async-retry": "^1.3.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dd-trace": "^3.6.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphile-build": "^4.12.0",
    "graphile-migrate": "^1.4.1",
    "graphile-utils": "^4.13.0",
    "graphql": "^15.8.0",
    "graphql-parse-resolve-info": "^4.12.3",
    "graphql-relay": "^0.9.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "pg": "^8.8.0",
    "pg-promise": "^11.4.1",
    "postgraphile": "^4.13.0",
    "postgraphile-plugin-connection-filter": "^2.3.0",
    "postgraphile-upsert-plugin": "^3.2.2",
    "uuid": "^9.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/async-exit-hook": "^2.0.0",
    "@types/async-retry": "^1.4.5",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.4.0",
    "@types/lodash": "^4.14.191",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.3",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.55.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.35.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "glob": "^9.2.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.21",
    "pg-sql2": "^4.12.3",
    "pre-commit": "^1.2.2",
    "rimraf": "^4.4.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "prettier": {
    "proseWrap": "always",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "precommit": [
    "build",
    "lint"
  ]
}
